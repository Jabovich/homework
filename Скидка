using System;

namespace price {

  class MainClass {

    public static void Main (string[] args) {
      double p; 
      Console.WriteLine("Write prise");
      p=Convert.ToDouble(Console.ReadLine());
      if (p>=500 && p<1000) {p*=0.97;}
        else {if (p>1000) {p*=0.95;}}
      Console.WriteLine($"Price with sale {p}");
    }
  }
}
