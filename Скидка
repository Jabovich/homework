using System;

namespace price {

  class MainClass {

    public static void Main (string[] args) {
      double p,ps; 
      Console.WriteLine("Write prise");
      p=Convert.ToDouble(Console.ReadLine());
      if (p<=500) {Console.WriteLine($"Prise is {p}");}
      if (p>500) {ps=p-(3(p/100)); Console.WriteLine($"Prise is {ps}");}
      if (p>1000) {ps=p-(5(p/100)); Console.WriteLine($"Prise is {ps}");}
    }
  }
}
